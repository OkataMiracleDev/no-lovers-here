generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ticket {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String
  name          String?
  ticketType    String   // "Men" or "Women"
  amount        Int
  paymentRef    String   @unique
  qrCode        String   @unique
  status        String   @default("active") // active, used, cancelled
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  scannedAt     DateTime?
  scannedBy     String?

  @@index([email])
}

model Settings {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  settingsId      String   @unique @default("settings")
  maxTickets      Int      @default(500)
  menTicketsSold  Int      @default(0)
  womenTicketsSold Int     @default(0)
  menTicketPrice  Int      @default(18000)
  womenTicketPrice Int     @default(8000)
  updatedAt       DateTime @updatedAt
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}
